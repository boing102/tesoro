<h1>Listing events</h1>

<table data-toggle="table" class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Symbol</th>
      <th>Qty</th>
      <th>Price</th>
      <th>Tot</th>
      <th>Average Carrying</th>
      <th>Capital Gain</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.executed_on %></td>
        <td><%= event.action.upcase %></td>
        <td><%= event.stock.symbol %></td>
        <td><%= event.quantity %></td>
        <td><%= event.price %></td>
        <td><%= event.total %></td>
        <td><%= event.average_carrying %></td>
        <td><%= event.capital_gain %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><strong>Total capital gain this year:</strong> <%= @total_capital_gain %></p>

<br>

